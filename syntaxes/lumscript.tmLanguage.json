{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Lumerical Script",
    "foldingStartMarker": "\\{\\s*$",
    "foldingStopMarker": "^\\s*\\}",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#function_call"
        },
        {
            "include": "#matrix_brackets"
        },
        {
            "include": "#cell_braces"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#complex_number"
        },
        {
            "include": "#constant"
        },
        {
            "include": "#number"
        },
                {
                "include": "#comment"
                },
                {
                    "include": "#comment"
                },
                {
                    "include": "#function_call"
                },
                {
                    "include": "#readwrite_variable"
                }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.lumscript",
                    "match": "\\b(if|else|elseif|for|while|switch|case|otherwise|try|catch|break|continue|return|end)\\b"
                },
                {
                    "name": "keyword.function.lumscript",
                    "match": "\\b(function)\\b"
                },
                {
                    "name": "keyword.storage.modifier.lumscript",
                    "match": "\\b(global|persistent|parfor|spmd)\\b"
                }
            ]
        },
        "function_call": {
            "comment": "\r\n\t\t\t\tFunction call; matrix or array index (subscript)\r\n\t\t\t\tWe don't include $self here to avoid matching command syntax inside (), [], {}\r\n\t\t\t",
            "name": "meta.function-call.parens.lumscript",
            "begin": "([a-zA-Z][a-zA-Z0-9_]*)\\s*(\\()",
            "end": "(\\)|(?<!\\.\\.\\.)\\n)",
            "beginCaptures": {
                "1": {
                "name": "entity.name.function.lumscript"
                },
                "2": {
                "name": "punctuation.section.parens.begin.lumscript"
                }
            },
            "endCaptures": {
                "0": {
                "name": "punctuation.section.parens.end.lumscript"
                }
            },
            "patterns": [
                {
                "include": "#strings"
                },
                {
                "include": "#constant"
                },
                {
                "include": "#number"
                },
                {
                "include": "#operators"
                },
                {
                    "include": "#comment"
                },
                {
                    "include": "#function_call"
                },
                {
                    "include": "#readwrite_variable"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.lumscript",
            "begin": "(\"|')",
            "end": "(\"|')",
            "patterns": [
                {
                    "name": "constant.character.escape.lumscript",
                    "match": "\\\\."
                }
            ]
        },
        "complex_number": {
            "name": "constant.numeric.complex.lumscript",
            "match": "\\b(?x: -?(?:0|[1-9]\\d*)(?:(?:\\.\\d+)?(?:[eE][+-]?\\d+)?)?)[ij]\\b"
        },
        "constant": {
            "name": "constant.language.lumscript",
            "match": "\\b(pi|eps0|um|inf|Inf|nan|NaN|true|false|i|j|eps|realmax|realmin)\\b"
        },
        "number": {
            "name": "constant.numeric.lumscript",
            "match": "\\b(?x: -?(?:0|[1-9]\\d*)(?:(?:\\.\\d+)?(?:[eE][+-]?\\d+)?)?)\\b"
        },
        "operators": {
            "patterns": [
                {
                    "comment": "Metadata query for class properties",
                    "name": "keyword.operator.question.lumscript",
                    "match": "(?<!\\w)\\?(?=\\w)"
                },
                {
                    "comment": "Arithmetic operator symbols",
                    "name": "keyword.operator.arithmetic.lumscript",
                    "match": "(?<=[a-zA-Z0-9\\s])(\\+|-|\\*|\\.\\*|/|\\./|\\\\|\\.\\\\|\\^|\\.\\^|%)(?=[a-zA-Z0-9\\s])"
                },
                {
                    "comment": "Operator symbols",
                    "name": "keyword.operator.logical.lumscript",
                    "match": "(?<=[a-zA-Z0-9\\s])(==|~==|!=|&|&&|\\||\\|\\|)(?=[a-zA-Z0-9\\s])"
                },
                {
                    "comment": "Assignment operator",
                    "name": "keyword.operator.assignment.lumscript",
                    "match": "(?<=[a-zA-Z0-9\\s])(=)(?!=)"
                },
                {
                    "comment": "Colon operator for vector creation/indexing",
                    "name": "keyword.operator.vector.colon.lumscript",
                    "match": "(?<=[a-zA-Z0-9_\\s(){,]|^):(?=[a-zA-Z0-9_\\s()},]|$)"
                },
                {
                    "comment": "Comparative operators",
                    "name": "keyword.operator.relational.lumscript",
                    "match": "(?<=[a-zA-Z0-9\\s])(>|>=|<|<=)(?=[a-zA-Z0-9\\s])"
                },
                {
                    "comment": "Transpose operator",
                    "name": "keyword.operator.transpose.lumscript",
                    "match": "(?<=[a-zA-Z0-9_)\\]}])'(?!\\w)"
                },
                {
                    "comment": "Non-conjugate transpose operator",
                    "name": "keyword.operator.transpose.nonconjugate.lumscript",
                    "match": "(?<=[a-zA-Z0-9_)\\]}])\\.'(?!\\w)"
                },
                {
                    "comment": "Field access operator",
                    "name": "keyword.operator.field.access.lumscript",
                    "match": "\\.(?=[a-zA-Z])"
                },
                {
                    "comment": "Line continuation",
                    "name": "keyword.operator.line.continuation.lumscript",
                    "match": "\\.\\.\\."
                },
                {
                    "comment": "Logical NOT operator (exclamation)",
                    "name": "keyword.operator.logical.not.exclamation.lumscript",
                    "match": "!(?!=)"
                },
                {
                    "comment": "Logical NOT operator",
                    "name": "keyword.operator.logical.not.lumscript",
                    "match": "~(?!=)"
                },
                {
                    "comment": "Not equals operator",
                    "name": "keyword.operator.relational.not.equals.lumscript",
                    "match": "~="
                }
            ]
        },
        "comment": {
            "name": "punctuation.definition.comment.lumscript",
            "match": "\\#[^\n]*"
        },
        "readwrite_variable": {
            "comment": "Top-level workspace variable highlighting",
            "name": "variable.other.readwrite.matlab",
            "match": "(?<![a-zA-Z0-9_]|\\.)[a-zA-Z][a-zA-Z0-9_]*(?![a-zA-Z0-9_](?:\\(|\\{|\\.\\())"
        },
        "data_types": {
            "name": "storage.type.lumscript",
            "match": "\\b(double|single|int8|uint8|int16|uint16|int32|uint32|int64|uint64|logical|char|string|struct|cell|table)\\b"
        },
        "matrix_brackets": {
            "name": "meta.matrix.literal.lumscript",
            "begin": "\\[",
            "end": "\\]",
            "patterns": [
                {
                    "include": "#strings"
                },
                {
                    "include": "#constant"
                },
                {
                    "include": "#number"
                },
                {
                    "include": "#operators"
                },
                {
                    "include": "#comment"
                },
                {
                    "include": "#readwrite_variable"
                }
            ]
        },
        "cell_braces": {
            "name": "meta.cell.literal.lumscript",
            "begin": "\\{",
            "end": "\\}",
            "patterns": [
                {
                    "include": "#strings"
                },
                {
                    "include": "#constant"
                },
                {
                    "include": "#number"
                },
                {
                    "include": "#operators"
                },
                {
                    "include": "#comment"
                },
                {
                    "include": "#readwrite_variable"
                }
            ]
        }
    },
    "scopeName": "source.lumscript"
}